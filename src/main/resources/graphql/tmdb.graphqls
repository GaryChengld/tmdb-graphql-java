schema {
    query: Query
}

type Query {
    movie(apiKey: String!, id: Integer!): Movie
}

type Movie {
    id: Integer!
    title: String!
    audit: Boolean!
    genres: [Genre]
    voteAverage: Float
}

type MovieDetail {
    id: Integer!
    title: String!
    audit: Boolean!
    genres: [Genre]
    voteAverage: Float
}

type Genre {
    id: Integer!
    name: String!
}